<% content_for(:page_title) do %><%= posts_title(@tag) %><% end -%>
<% content_for(:head)       do %><%= auto_discovery_link_tag(:atom, @tag.nil? ? formatted_posts_path(:format => 'atom') : posts_path(:tag => @tag, :format => 'atom')) %><% end -%>
<!--当前位置-->
<div class="channel_nav">  <img src="/images/076.gif" alt="" />
<a href="/" title="返回首页">首页</a> 
    </div>
<br/>
<% if @posts.empty? -%>
	<p>您不打算在这里写点什么吗。</p>
<% else -%>
	<% @posts.each do |post| -%>
	<div class="post post-<%= post.id %>">
	  <%= render :partial => 'post', :locals => {:post => post} %>
	</div>
	<% end -%>
  <% if more_content? -%>
    <div class="related">还在找什么呢？单击这里查看所有的随笔归档。 <%= link_to("GO！", archives_path) %>.</div>
  <% end -%>
<% end -%>
