<div id="body">

<table cellspacing="0">
<thead>
  <tr>
    <th>编号</th>
    <th>书名</th>
    <th>作者</th>
    <th>ISBN</th>
    <th>价格</th>
    <th>出版社</th>
  </tr>
</thead>
<tbody>
<% @books.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= book.name %></td>
    <td><%= book.author %></td>
    <td><%= book.ISBN %></td>
    <td><%= book.price %></td>
    <td><%= book.publisher %></td>
  </tr>
<% end %>
</tbody>
</table>

</div>
