<h1>Listing students</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Klass</th>
    <th>Number</th>
    <th>Age</th>
    <th>Sex</th>
    <th>Home address</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.id %></td>
    <td><%= student.name %></td>
    <td><%= student.klass %></td>
    <td><%= student.number %></td>
    <td><%= student.age %></td>
    <td><%= student.sex %></td>
    <td><%= student.home_address %></td>
    <td><%= student.phone %></td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

