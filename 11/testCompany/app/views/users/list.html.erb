<h2>查看所有用户 </h2>

<table  class="listing" cellpadding="0" cellspacing="0">
  <tr>
    <th  class="first" >编号</th>
    <th>用户名</th>
    <th>所在部门</th>
    <th>联系电话</th>
    <th></th>
    <th></th>
    <th class="last"></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td class="first style1"><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.department %></td>
    <td><%= user.phone %></td>
    <td><%= link_to '详细', user %></td>
    <td><%= link_to '编辑', edit_user_path(user) %></td>
    <td class="last"><%= link_to '删除', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<div id="list"></div>
